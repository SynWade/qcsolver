@model IEnumerable<qcsolver.Models.Timestamp>

@{
    ViewBag.Title = "Index";
}

<h2>View Timestamps</h2>
<hr style="border: 1px double #337ab7;">
<link type="text/css" href="~/Content/BottomImages.css" rel="stylesheet">

<table class="table table-striped table-bordered table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.timeIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.timeOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConstructionSite1.address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person1.firstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.timeIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.timeOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConstructionSite1.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person1.firstName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.timestampId }) |
                @Html.ActionLink("Details", "Details", new { id = item.timestampId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.timestampId })
            </td>
        </tr>
    }
</table>
<div class="indexTime">
    <img src="~/Content/Images/Icons/timestamp.png" alt="Timestamp Icon" />
</div>